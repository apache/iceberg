// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
    "name": "Java",
    // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
    "image": "mcr.microsoft.com/devcontainers/base",
    "initializeCommand": {
        // Make sure the .gradle directory exists on the host so we can bind to it.
        // TODO: Make this work on Windows too.
        "create-gradle-cachedir": "mkdir -pv ${localEnv:HOME}/.gradle"
    },

    "mounts": [
        // Bind mount the .gradle directory to the host so we can reuse the cache across containers.
        "source=${localEnv:USERPROFILE}${localEnv:HOME}/.gradle,target=/home/vscode/.gradle,type=bind"
    ],

    "containerEnv": {
        // Set the JAVA_HOME environment variable to use the Java installation
        // in the devcontainer.
        "JAVA_HOME": "/usr/local/sdkman/candidates/java/current"
    },

    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            // Iceberg is is compatible with Java 17 and 21.
            // See README.md for more details.
            "version": "21",
            "installGradle": "true",
            "gradleVersion": "8.14"
        },
        // Make docker available in the container.
        // Needed for some integration tests.
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "moby": true,
            "azureDnsAutoDetection": true,
            "installDockerBuildx": true
        },
        // Preserve shell history across devcontainer restarts.
        "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack",

                // Optional extensions for AI assisted Java development.
                "Github.copilot",
                "GitHub.copilot-chat"
            ],
            "settings": {
                // Oracle Java extension settings:
                "jdk.jdkhome": "/usr/local/sdkman/candidates/java/current",
                // MS Java extension settings:
                // Point the Gradle at the Java installation in the devcontainer.
                "java.import.gradle.java.home": "/usr/local/sdkman/candidates/java/current",
                "gradle.nestedProjects": true,
                "java.jdt.ls.java.home": "/usr/local/sdkman/candidates/java/current"
            }
        }
    }

    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    // "forwardPorts": [],

    // Use 'postCreateCommand' to run commands after the container is created.
    // "postCreateCommand": "java -version",

    // Configure tool-specific properties.
    // "customizations": {},

    // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
    // "remoteUser": "root"
}
